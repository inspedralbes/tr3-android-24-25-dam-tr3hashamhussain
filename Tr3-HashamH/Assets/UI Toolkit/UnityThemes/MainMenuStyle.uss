.title {
    font-size: 48px;
    color: #FFFFFF;
    margin-bottom: 40px;
}

.button-container {
    flex-direction: column;
    align-items: center;
    gap: 20px;
}

.menu-button {
    width: 200px;
    height: 50px;
    background-color: #4CAF50;
    color: #FFFFFF;
    font-size: 18px;
    border-radius: 5px;
    border: none;
    cursor: pointer;
}

.menu-button:hover {
    background-color: #45a049;
}