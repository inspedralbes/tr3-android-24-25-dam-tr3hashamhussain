            <engine:Button text="Difícil" name="btn-dificil" class="menu-button hard" />
            <engine:Button text="Nivell personalitzat" name="btn-custom" class="menu-button custom" />
            <engine:Button text="Sortir" name="btn-exit" class="menu-button exit" />
        </engine:VisualElement>
        
        <!-- Footer con más espacio -->
        <engine:Label text="© 2023 Angry-Flappy" class="footer-text" />
    </engine:VisualElement>
</engine:UXML>