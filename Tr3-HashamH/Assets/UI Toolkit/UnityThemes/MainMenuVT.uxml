    <engine:VisualElement name="main-container" class="main-container">
        <!-- Fondo animado -->
        <engine:VisualElement name="background" class="animated-background" />
        
        <!-- Título del juego -->
        <engine:Label text="Angry-Flappy" name="game-title" class="game-title" />
        
        <!-- Contenedor de botones -->
        <engine:VisualElement name="button-container" class="button-container">
            <engine:Button text="Fàcil" name="btn-facil" class="menu-button easy" />
